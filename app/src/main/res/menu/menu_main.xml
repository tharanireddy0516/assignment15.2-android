<menu xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.example.tharani.androidversions.MainActivity">
    <!-- android:enabled="true" is Shown by activity
   android:icon using internal icon i.e add to add the new note
   represents add function
     Resource ID. A unique resource ID. To create a new resource ID for this item, use the form: "@+id/name".
      The plus symbol indicates that this should be created as a new ID.
   android:orderInCategory is lowest the number higher in category
   app:showAsAction="always" shows the button and ifRoom hides it
   -->
    <item
        android:id="@+id/action_add"
        android:icon="@drawable/ic_action_add"
        android:orderInCategory="100"
        android:title="action_add"
        app:showAsAction="always"/>
    <item
        android:id="@+id/action_delete"
        android:icon="@drawable/ic_action_delete"
        android:orderInCategory="100"
        android:title="action_delete"
        app:showAsAction="always"/>
    <item android:id="@+id/action_settings"
        android:title="@string/action_settings"
        android:orderInCategory="100"
        app:showAsAction="never" />
    <item android:id="@+id/action_search"
        android:title="Search"
        android:orderInCategory="100"
        app:showAsAction="never" />
</menu>
    <!--Menus are additional options that are displayed by clicking the menu button of mobile
        Menus are a common user interface component in many types of applications.
        -->